<div class="col-12 col-md-6 col-lg-3">
  <div class="card">
    <%= link_to admin_datasheet_path(datasheet) do %>
      <div class="card-body">
        <div id="<%= dom_id datasheet %>">
          <h5 class="card-title"><%= datasheet.name %></h5>
          <p class="card-text">
            Name: <%= datasheet.name %>
            <br>
          </p>
        </div>
      </div>

      <div class="card-footer">
        <small class="text-muted">Last update: <%= datasheet.updated_at %></small>
      </div>
    <% end %>
  </div>
</div>