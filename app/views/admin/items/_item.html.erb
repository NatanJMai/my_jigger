<tr>
  <th scope="row"><%= item.id %></th>
  <td><%= item.name %></td>
  <td><%= item.menu_section&.menu&.name %></td>
  <td><%= item.menu_section&.name %></td>
  <td><%= item.status %></td>
  <td class="minimal">
    <%= link_to admin_item_path(item), class: 'btn btn-success' do %>
      <i class="bi bi-pencil-square"></i> VIEW
    <% end %>

    <%= link_to edit_admin_item_path(item), class: 'btn btn-info' do %>
      <i class="bi bi-pencil-square"></i> EDIT
    <% end %>

    <%= button_to admin_item_path(item), class: "btn btn-danger",
                  method: :delete, form: { data: { turbo: true, turbo_confirm: 'Are you sure?', method: :delete } } do %>

      <i class="bi bi-trash"></i> DELETE
    <% end %>
  </td>
</tr>
