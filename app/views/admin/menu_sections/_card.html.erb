<div class="col-12 col-md-6 col-lg-3">
  <div class="card">
    <%= link_to admin_menu_section_path(menu_section) do %>
      <%= image_tag 'https://mdbcdn.b-cdn.net/img/new/standard/city/044.webp',
                    class: "card-img-top" %>
    <% end %>

    <div class="card-body">
      <div id="<%= dom_id menu_section %>">
        <h5 class="card-title"><%= menu_section.name %></h5>
        <p class="card-text">
          Name: <%= menu_section.name %>
          <br>
        </p>
      </div>
    </div>

    <div class="card-footer">
      <small class="text-muted">Last update: <%= menu_section.updated_at %></small>
    </div>
  </div>
</div>