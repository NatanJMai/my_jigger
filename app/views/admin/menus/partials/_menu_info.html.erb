<div class="card-header">
  <div class="row">
    <div class="col-4">
      <h4 class="card-title text-left"><%= menu.name %></h4>
    </div>
    <div class="col-3">
        <%= menu.boolean_label(menu.status) %>
    </div>

    <div class="col-3">
      <%= menu.boolean_label(menu.data_imported,
                             label = { true => 'Data Imported',
                                       false => 'Not Imported' }) %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h7 class="card-title text-left"><%= menu.organization.name %></h7>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h7 class="card-title text-left"><%= menu.release_date %></h7>
    </div>
  </div>

  <div class="row">
    <div class="col-12 info-label">
      <br>
      <div><b>Description</b></div>

      <div class="text-left"><%= menu.description %></div>
    </div>
  </div>
</div>