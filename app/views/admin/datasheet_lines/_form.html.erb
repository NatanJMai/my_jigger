<%= simple_form_for(model) do |f| %>
  <div class="row datasheet_line_row">
    <div class="col-1">
      <%= datasheet_line&.id.presence || "ID" %>
    </div>

    <div class="col">
      <%= f.input :product_id, as: :select, collection: Product.all, label: false %>
    </div>

    <div class="col-1">
      <%= datasheet_line.product&.volume %>
    </div>

    <div class="col-1">
      <%= datasheet_line.product&.unit %>
    </div>

    <div class="col-1">
      <%= humanized_money_with_symbol datasheet_line.product&.price %>
    </div>

    <div class="col-2">
      <%= f.input :quantity, label: false %>
    </div>

    <div class="col-1">
      <%= humanized_money_with_symbol Money.new(datasheet_line.calculated_price) %>
    </div>

    <div class="col minimal">
      <%= f.button :submit, "SAVE", class: "btn btn-success"  %>
    </div>
  </div>
<% end %>