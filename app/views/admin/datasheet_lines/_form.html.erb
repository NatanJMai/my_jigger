<h2 class="display-4 text-white">
  <%= @datasheet.name %> Datasheet
</h2>

<div class="container">
  <%= simple_form_for(model,
                      html: { class: 'jform row row-cols align-items-center' } ) do |f| %>

    <div class="card-header">
      <h5 class="card-title text-center">New Datasheet</h5>
    </div>

    <legend><span class="number">1</span> Detail</legend>

    <div class="row">
      <div class="col-6">
        <%= f.input :quantity %>
      </div>
    </div>

    <legend><span class="number">2</span> Status</legend>
    <div class="row">
      <div class="col-4">
        <%= f.input :product_id, as: :select, collection: Product.all, label: 'product' %>
      </div>
    </div>

    <div class="row">
      <%= f.button :submit, "Save", class: "form-btn"  %>
    </div>
  <% end %>
</div>


