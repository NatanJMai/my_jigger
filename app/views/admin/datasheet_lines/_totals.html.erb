<%= turbo_frame_tag 'totals' do %>
  <hr>
  <div class="row datasheet_line_footer">
    <div class="col-1"></div>
    <div class="col">CUSTOMER PRICE</div>
    <div class="col-1"></div>
    <div class="col-1"></div>
    <div class="col-1"></div>
    <div class="col-2">TOTAL</div>
    <div class="col-1">
      <%= humanized_money_with_symbol Money.new(datasheet.get_total_price) %>
    </div>

    <div class="col"></div>
  </div>

  <div class="row datasheet_line_footer">
    <div class="col-1"></div>
    <div class="col">
      <%= text_field_tag "datasheet-price", nil, class: 'inline-datasheet-price',
                         data: { url: calculate_cmv_admin_datasheet_path(@datasheet) } %>

    </div>
    <div class="col-1">
      <i class="fas fa-sync datasheet-price-refresh"></i>
    </div>
    <div class="col-1"></div>
    <div class="col-1"></div>
    <div class="col-2">CMV</div>
    <div class="col-1 datasheet-cmv"></div>
    <div class="col"></div>
  </div>
<% end %>


